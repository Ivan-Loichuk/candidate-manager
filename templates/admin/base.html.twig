<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin Panel!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        {{ encore_entry_link_tags('admin-vendor') }}
        {{ encore_entry_link_tags('admin-panel') }}
    {% endblock %}
</head>
<body>
<div class="wrapper">

    {% include 'admin/_partial/sidebar.html.twig' %}

    <div class="main-panel">
        {% include 'admin/_partial/navbar.html.twig' %}

        {% block body %}{% endblock %}

        {% include 'admin/_partial/footer.html.twig' %}
    </div>
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('admin-vendor') }}
    {{ encore_entry_script_tags('admin-panel') }}
{% endblock %}
</body>
</html>