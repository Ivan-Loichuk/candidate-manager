<div class="modal fade" id="delete-company-{{ company.id }}" tabindex="-1" role="dialog" aria-labelledby="delete-company-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete-company-label">
                    {{ 'czy napewno chcesz usunąć firmę'|trans|capitalize }}
                    <strong>{{ company.name }}</strong>?
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <form action="{{ path('app_admin_company_delete', { id: company.id }) }}" method="post">
                    <button type="submit" class="btn-primary pull-right btn-save">{{ 'tak, usuń'|trans|capitalize }}</button>
                </form>
            </div>
        </div>
    </div>
</div>