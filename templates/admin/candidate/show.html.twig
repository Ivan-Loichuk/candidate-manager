{% extends 'admin/base.html.twig' %}

{% block javascripts %}
    {{ encore_entry_script_tags('profile-page') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('profile-page') }}
{% endblock %}

{% block body %}
    <div class="content profile-page">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-9">
                    <div class="card">
                        <div class="card-body">
                            <div class="profile__header">
                                <h4>{{ candidate.firstname }} {{ candidate.lastname}} <small>{{ candidate.profession }}</small></h4>
                                <p class="text-muted">
                                    {{ candidate.aboutCandidate }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">{{ 'dane osobowe'|trans|capitalize }}</h4>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <td><strong>{{ 'narodowość'|trans|capitalize }}</strong></td>
                                    <td class="last">{{ candidate.nationality }}</td>
                                </tr>
                                <tr>
                                    <td><strong>{{ 'płeć'|trans|capitalize }}</strong></td>
                                    <td class="last">{{ candidate.gender }}</td>
                                </tr>
                                <tr>
                                    <td><strong>{{ 'data urodzenia'|trans|capitalize }}</strong></td>
                                    <td class="last">{{ candidate.dateOfBirth|date("m-d-Y") }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">{{ 'dane kontaktowe'|trans|capitalize }}</h4>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td><strong>{{ 'email'|trans|capitalize }}</strong></td>
                                        <td class="last">{{ candidate.email }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>{{ 'numer telefonu'|trans|capitalize }}</strong></td>
                                        <td class="last">{{ candidate.phoneNumber }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>{{ 'viber'|trans|capitalize }}</strong></td>
                                        <td class="last">{{ candidate.viber }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>{{ 'skype'|trans|capitalize }}</strong></td>
                                        <td class="last">{{ candidate.skype }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">{{ 'miejsce urodzenia'|trans|capitalize }}</h4>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td><strong>{{ 'kraj'|trans|capitalize }}</strong></td>
                                        <td class="last">{{ candidate.birthplace.country.nicename }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>{{ 'miasto'|trans|capitalize }}</strong></td>
                                        <td class="last">{{ candidate.birthplace.city }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <p>
                        <a href="#" class="profile__contact-btn btn btn-lg btn-block btn-info" data-toggle="modal" data-target="#profile__contact-form">
                           {{ 'napisz maila'|trans|capitalize }}
                        </a>
                    </p>

                    <hr class="profile__contact-hr">
                </div>
            </div>
        </div>
    </div>
{% endblock %}