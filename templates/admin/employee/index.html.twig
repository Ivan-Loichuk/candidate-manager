{% extends 'admin/base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin-candidate') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin-candidate') }}
{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card strpied-tabled-with-hover">
                        <div class="card-header ">
                            <h4 class="card-title">{{ 'lista pracowników'|trans|capitalize }}</h4>
                            <!-- Actual search box -->
                            <form method="get">
                                <div class="form-group has-search">
                                    <span class="fa fa-search form-control-feedback"></span>
                                    <input type="search" class="form-control" name="q" placeholder="{{ 'search'|trans|capitalize }}">
                                </div>
                            </form>
                        </div>
                        <div class="card-body table-full-width table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <th>ID</th>
                                    <th>{{ 'imię'|trans|capitalize }}</th>
                                    <th>{{ 'akcje'|trans|capitalize }}</th>
                                </thead>
                                <tbody>
                                {% for candidate in pagination %}
                                    <tr>
                                        <td>{{ candidate.id }}</td>
                                        <td>{{ candidate.firstname }} {{ candidate.lastname }}</td>
                                        <td>
                                            <a href="{{ path('app_admin_candidate_show', {id: candidate.id}) }}" title="{{ 'show candidate'|trans|capitalize }}" class="icon-link">
                                                <i class="fas fa-eye fa-lg"></i>
                                            </a>
                                            <a href="{{ path('app_admin_candidate_edit', {id: candidate.id}) }}" title="{{ 'edit candidate'|trans|capitalize }}" class="icon-link">
                                                <i class="fas fa-edit fa-lg"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="table-pagination">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}