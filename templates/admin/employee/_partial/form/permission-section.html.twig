<div class="card border-top">
    <div class="card-header">
        <h4 class="card-title">{{ 'zezwolenia'|trans|capitalize }}</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                {% macro tagCollectionItem(formData) %}
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label for="permission_data_from">{{ 'data od'|trans|capitalize }}</label>
                            {{ form_widget(formData.dateFrom) }}
                            <div class="errors">
                                {{ form_errors(formData.dateFrom) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 remove-collection-wrapper">
                        <div class="form-group w-100">
                            <label for="permission_date_to">{{ 'data do'|trans|capitalize }}</label>
                            {{ form_widget(formData.dateTo) }}
                            <div class="errors">
                                {{ form_errors(formData.dateTo) }}
                            </div>
                        </div>
                        <a href="#" class="js-remove-collection pull-right">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                {% endmacro %}

                <div id="permission-fields-list" class="list-group"
                     data-prototype="{{ _self.tagCollectionItem(form.permission.vars.prototype)|e }}"
                     data-widget-tags="{{ '<div class="row js-collection"></div>'|e }}"
                     data-widget-counter="{{ form.permission|length }}">
                    {% if form.permission|length > 0 %}
                        {% for permissionField in form.permission %}
                            <div class="row js-collection">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label for="permission_date_from">{{ 'data od'|trans|capitalize }}</label>
                                        {{ form_widget(permissionField.dateFrom) }}
                                        <div class="errors">
                                            {{ form_errors(permissionField.dateFrom) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 remove-collection-wrapper">
                                    <div class="form-group w-100">
                                        <label for="permission_date_to">{{ 'data do'|trans|capitalize }}</label>
                                        {{ form_widget(permissionField.dateTo) }}
                                        <div class="errors">
                                            {{ form_errors(permissionField.dateTo) }}
                                        </div>
                                    </div>
                                    <a href="#" class="js-remove-collection pull-right">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        {{ form_widget(form.permission) }}
                    {% endif %}
                </div>

                <a type="button"
                   class="add-another-collection-widget"
                   data-list-selector="#permission-fields-list">{{ 'Dodaj okres zezwolenia'|trans }}</a>

            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>